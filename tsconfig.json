{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "lib": ["es2015"],
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false // react-reveal이 typescript 대응이 안 되어 있어서 임시 추가
  },
  "include": ["src/*/*"],
  "exclude": ["node_modules"]
}
